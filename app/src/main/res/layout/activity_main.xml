<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:tileMode="repeat">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:tileMode="repeat"
        android:gravity="center"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:elevation="4dp"
        android:padding="8dip">

        <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro" />

        <TextView
            android:id="@+id/city"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/loading" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/loading" />

            <ImageView
                android:id="@+id/countryFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/contentDescrFlagImg"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:tileMode="repeat"
        android:gravity="center"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:elevation="4dp"
        android:padding="8dip">

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            app:srcCompat="@drawable/icon_refresh" />

        <TextView
            android:id="@+id/activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activities" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/museumLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/contentDescrMuseumImg"
                android:paddingRight="4dp"
                app:srcCompat="@drawable/icon_museum" />

            <TextView
                android:id="@+id/museum"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/loading" />

            <CheckBox
                android:id="@+id/museumMarker"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/markerBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@string/contentDescrMarkerBlue"
                app:srcCompat="@drawable/marker_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/parkLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/contentDescrParkImg"
                android:paddingRight="4dp"
                app:srcCompat="@drawable/icon_park" />

            <TextView
                android:id="@+id/park"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/loading" />

            <CheckBox
                android:id="@+id/parkMarker"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/markerGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@string/contentDescrMarkerGreen"
                app:srcCompat="@drawable/marker_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/churchLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/contentDescrChurchImg"
                android:paddingRight="4dp"
                app:srcCompat="@drawable/icon_church" />

            <TextView
                android:id="@+id/church"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/loading" />

            <CheckBox
                android:id="@+id/churchMarker"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/markerRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@string/contentDescrMarkerRed"
                app:srcCompat="@drawable/marker_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nightClubLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/contentDescrNightClubImg"
                android:paddingRight="4dp"
                app:srcCompat="@drawable/icon_nightclub" />

            <TextView
                android:id="@+id/nightClub"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/loading" />

            <CheckBox
                android:id="@+id/nightClubMarker"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/markerPurple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@string/contentDescrMarkerPurple"
                app:srcCompat="@drawable/marker_purple" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zooLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/contentDescrZooImg"
                android:paddingRight="4dp"
                app:srcCompat="@drawable/icon_zoo" />

            <TextView
                android:id="@+id/zoo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/loading" />

            <CheckBox
                android:id="@+id/zooMarker"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/markerOrange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="@string/contentDescrMarkerOrange"
                app:srcCompat="@drawable/marker_orange" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/range"
                />

            <EditText
                android:id="@+id/rangeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="numberSigned"
                android:text="1000" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meter"
                />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mapLabel" />
    </LinearLayout>
</ScrollView>
